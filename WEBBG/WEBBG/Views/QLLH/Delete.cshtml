@model WEBBG.Models.LIENHE

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="text-align:center;color:red;">XÓA LIÊN HÊ</h3>

<h4>Bạn có muốn xóa?</h4>
<div class="container">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            HỌ TÊN
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HOTEN)
        </dd>

        <dt>
            EMAIL
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMAIL)
        </dd>

        <dt>
            CHỦ ĐỀ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHUDE)
        </dd>

        <dt>
            NỘI DUNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOIDUNG)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay Lại", "Index")
        </div>
    }
</div>
