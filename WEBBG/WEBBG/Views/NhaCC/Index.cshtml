@model IEnumerable<WEBBG.Models.NCC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="text-align:center;color:red;">QUẢN LÝ NHÀ CUNG CẤP</h3>

<p>
    @Html.ActionLink("Thêm nhà cung cấp", "Create")
</p>
<table class="table">
    <tr>
        <th>
            TÊN NHÀ CUNG CẤP
        </th>
        <th>
            ĐỊA CHỈ
        </th>
        <th>
            ĐIỆN THOẠI
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TENNCC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIACHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIENTHOAI)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MANCC }) |
            @Html.ActionLink("Details", "Details", new { id=item.MANCC }) |
