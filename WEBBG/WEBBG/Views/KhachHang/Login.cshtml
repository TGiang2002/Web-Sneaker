
@{
    ViewBag.Title = "ĐĂNG NHẬP";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<h4 style="color:red; text-align:center">@ViewBag.ThongBao</h4>
<div class="dangnhap container">
    <h3 class="text-center" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
        ĐĂNG NHẬP TÀI KHOẢN
    </h3>
    <table align="center">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td>Tên đăng nhập</td>
                <td>
                    @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Mật khẩu</td>
            <td>
                @Html.Password("MatKhau")
            @ViewData["Loi2"]
        </td>
    </tr>

    <tr style="height:40px;">
        <td></td>
        <td>
            <input type="submit" value="Đăng nhập" />
        </td>
    </tr>
}
    </table>
</div>
<style>
    .dangnhap {
        border:5px solid #ff6a00;
        width:500px;
        border-radius:10px;
        
    }
</style>