
@{
    ViewBag.Title = "ĐĂNG KÝ";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<div class="dangky container" >
<table align="center">
    <h4 class="text-center" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">ĐĂNG KÝ TÀI KHOẢN</h4>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td>Họ tên </td>
                <td>@Html.TextBox("HoTenKH")
                @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Tên đăng nhập</td>
                <td>@Html.TextBox("TenDN")
                @ViewData["Loi2"]
                </td>
            </tr>

            <tr style="height:40px">
                <td>Mật khẩu</td>
                <td>@Html.Password("MatKhau")
                @ViewData["Loi3"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Nhập lại mật khẩu</td>
                <td>@Html.Password("nhaplaimatkhau")
                @ViewData["Loi4"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Email</td>
                <td>@Html.TextBox("Email")
                @ViewData["Loi5"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Địa Chỉ</td>
                <td>@Html.TextBox("Diachi")
                @ViewData["Loi6"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Điện thoại</td>
                <td>@Html.TextBox("dienthoai")
                @ViewData["Loi7"]
                </td>
            </tr>
            <tr style="height:40px;">
                <td></td>
                <td>
                    <input type="submit" value="Đăng ký" style="border:2px solid; border-radius:10px;" />
                </td>
            </tr>
        }
</table>
</div>
<style>
    .dangky {
        border: 5px solid #ff6a00;
        width: 500px;
        border-radius: 10px;
    }

</style>