@model WEBBG.Models.SANPHAM

@{
    ViewBag.Title = "ChitietSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="text-align:center;color:red;">THÔNG TIN SẢN PHẨM</h3>

<div class="container">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            TÊN SẢN PHẨM:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENSP)
        </dd>

        <dt>
            GIÁ BÁN
        </dt>

        <dd>
            @string.Format("{0:0,0}",Model.GIABAN) VNĐ
        </dd>

        <dt>
            ẢNH BÌA
        </dt>

        <dd>
            <img src="~/Public/img/@Model.ANHBIA" style="width:120px;height:120px;" />
        </dd>

        <dt>
            MÔ TẢ
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.MOTA)
        </dd>

        <dt>
            NGÀY CẬP NHẬT
        </dt>

        <dd>
            @string.Format("{0:dd/MM/yyy}",Model.NGAYSANXUAT) 
        </dd>

        <dt>
            NƠI SẢN XUẤT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOISANXUAT)
        </dd>

        <dt>
            SỐ LƯỢNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SL)
        </dd>

        <dt>
            LOẠI SẢN PHẨM
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAISP.TENLOAI)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NCC.TENNCC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MANCC)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "SuaSP", new { id = Model.MASP }) |
    @Html.ActionLink("Quay Lại", "SanPham")
</p>
