@model IEnumerable<WEBBG.Models.KHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3 style="text-align:center; color:red;">QUẢN LÝ KHÁCH HÀNG</h3>
<p>
    @Html.ActionLink("Tạo mới", "Tao")
</p>
<table class="table">
    <tr>
        <th>
            HỌ TÊN
        </th>
        <th>
            TÀI KHOẢN
        </th>
        @*<th>
            MẬT KHẨU
        </th>*@
        <th>
            EMAIL
        </th>
        <th>
            SỐ ĐIỆN THOẠI
        </th>
        <th>
            ĐỊA CHỈ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HOTEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TAIKHOAN)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.MATKHAU)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIENTHOAIKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIACHI)
        </td>
        <td>
            @Html.ActionLink("Edit", "Sua", new { id=item.MAKH }) |
            @Html.ActionLink("Details", "Chitiet", new { id=item.MAKH }) |
            @Html.ActionLink("Delete", "Xoa", new { id=item.MAKH })
        </td>
    </tr>
}

</table>
